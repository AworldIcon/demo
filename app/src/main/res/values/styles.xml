<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
    </style>

    <!--Toolbar弹出层样式 -->
    <style name="OverflowMenuStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层字体颜色 -->
        <item name="android:textColorSecondary">@color/font_white</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/first_theme</item>
        <!--<item name="android:dropDownListViewStyle">@style/dropDownStyle</item>-->
        <item name="actionOverflowMenuStyle">@style/optionMenu</item>
    </style>

    <style name="OverflowMenuStyleTop" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层字体颜色 -->
        <item name="android:textColorSecondary">@color/font_white</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/first_theme</item>
        <item name="android:dropDownVerticalOffset">30sp</item>
        <!--<item name="android:dropDownListViewStyle">@style/dropDownStyle</item>-->
        <item name="actionOverflowMenuStyle">@style/optionMenu</item>
    </style>

    <!--设置menu弹出在toolbar水平下方-->
    <style name="optionMenu" parent="Widget.AppCompat.ActionBar">
        <item name="android:popupBackground">@color/first_theme</item>
    </style>


    <!--<style name="dropDownStyle" parent="android:style/Widget.Holo.ListView.DropDown">-->
    <!--&lt;!&ndash;<item name="android:listSelector">可添加选中背景颜色</item>&ndash;&gt;-->
    <!--&lt;!&ndash;<item name="android:divider">#908d8d8d</item>&ndash;&gt;-->
    <!--<item name="android:dividerHeight">0.5dp</item>-->
    <!--</style>-->


    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
    </style>
    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
